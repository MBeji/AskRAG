# Docker Environment Variables for AskRAG
# Development Configuration

# Database
MONGODB_URL=mongodb://admin:admin123@mongodb:27017/askrag_db?authSource=admin
MONGODB_DB_NAME=askrag_dev

# JWT Security
JWT_SECRET_KEY=dev-secret-key-change-me-2024
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# OpenAI API (Add your key)
OPENAI_API_KEY=sk-your-openai-api-key-here

# File Upload
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760

# FAISS Vector Store
FAISS_INDEX_PATH=/app/data/faiss_index

# Redis (Optional)
REDIS_URL=redis://redis-dev:6379

# Environment
ENVIRONMENT=development
DEBUG=True

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# Frontend Environment
VITE_API_BASE_URL=http://localhost:8000
VITE_APP_NAME=AskRAG Dev
VITE_MAX_FILE_SIZE=10485760
