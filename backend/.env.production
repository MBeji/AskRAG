# Backend Environment Configuration for AskRAG
# Production Environment Configuration

# Application
PROJECT_NAME=AskRAG API
API_V1_STR=/api/v1
VERSION=1.0.0

# Environment
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=WARNING

# Security & Authentication
SECRET_KEY=${SECRET_KEY_SECRET}
JWT_SECRET_KEY=${JWT_SECRET_KEY_SECRET}
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=1440

# Database
MONGODB_URL=${MONGODB_URL_SECRET}
MONGODB_DB_NAME=askrag_prod
MONGODB_TEST_DB_NAME=askrag_prod_test

# OpenAI Configuration
OPENAI_API_KEY=${OPENAI_API_KEY_SECRET}
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# File Upload
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=.pdf,.txt,.docx,.md,.rtf
TEMP_DIR=/app/temp

# Vector Database (FAISS)
FAISS_INDEX_PATH=/app/data/faiss_index
VECTOR_DIMENSION=1536
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# RAG Configuration
DEFAULT_TOP_K=5
DEFAULT_TEMPERATURE=0.7
MAX_SEARCH_RESULTS=10
SIMILARITY_THRESHOLD=0.7

# Redis (Cache & Sessions)
REDIS_URL=${REDIS_URL_SECRET}
REDIS_DB=0
REDIS_PASSWORD=${REDIS_PASSWORD_SECRET}
REDIS_TTL=3600

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=${CORS_ORIGINS_SECRET}
CORS_ORIGINS=${CORS_ORIGINS_SECRET}

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Logging
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s - %(pathname)s:%(lineno)d
LOG_FILE=/app/logs/askrag.log
LOG_MAX_BYTES=104857600
LOG_BACKUP_COUNT=20

# Health Check
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Feature Flags
ENABLE_CHAT=True
ENABLE_DOCUMENT_UPLOAD=True
ENABLE_VECTOR_SEARCH=True
ENABLE_USER_REGISTRATION=True
ENABLE_ADMIN_PANEL=True

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090
PROMETHEUS_METRICS=True

# Email (for notifications)
SMTP_SERVER=${SMTP_SERVER_SECRET}
SMTP_PORT=587
SMTP_USERNAME=${SMTP_USERNAME_SECRET}
SMTP_PASSWORD=${SMTP_PASSWORD_SECRET}
FROM_EMAIL=${FROM_EMAIL_SECRET}

# External Services
SENTRY_DSN=${SENTRY_DSN_SECRET}
DATADOG_API_KEY=${DATADOG_API_KEY_SECRET}

# SSL & Security
SSL_VERIFY=True
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True

# Performance
WORKER_CONNECTIONS=1000
WORKER_TIMEOUT=30
KEEP_ALIVE=2
